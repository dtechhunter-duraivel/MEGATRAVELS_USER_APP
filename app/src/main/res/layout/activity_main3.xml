<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    android:background="@color/White"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/tic"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tick1" />
<TextView
    android:id="@+id/carname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="INDICA"
    android:layout_below="@id/tic"
    android:layout_centerHorizontal="true"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="@color/LightGreen"
    />
    <TextView
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="4+1"
        android:layout_below="@id/carname"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/Gray"
        />
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="A/C &amp; Non - A/C"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/seat"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/Gray"
        />

    <TextView
        android:id="@+id/spoint"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/category"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:text="K.K Nagar Main Road,Tiruchirappalli"
        android:textColor="@color/Gray"
        android:textSize="12dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/hrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spoint"

        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:text="Duration: Approx. 1hr 30min"
        android:textColor="@color/Gray"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/epoint"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/desti"
        android:layout_marginEnd="5dp"
        android:text="Thillai Nagar 9th Cross Street,Tiruchirappalli"
        android:textColor="@color/Gray"
        android:textSize="12dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_toStartOf="@+id/t2"
        android:text="â‚¹"
        android:textColor="@color/OrangeRed"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/t8"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/OrangeRed"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:textColor="@color/OrangeRed"
        android:textSize="55dp"
android:text="457"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:layout_centerHorizontal="true"
        android:text="TOTAL DISTANCE : 20 KM"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:text="WAITING CHARGES: 1.50/min"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/desti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_below="@+id/category"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/dest" />

    <ImageView
        android:id="@+id/taxi"
        android:layout_width="50dp"
        android:layout_height="48dp"
 android:layout_below="@id/category"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"

        android:src="@drawable/ic_local_taxi_green_24dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/hrs"
    android:layout_marginTop="26dp"
    android:layout_centerHorizontal="true"
    >


    <Button
        android:id="@+id/callnow"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/LightGreen"
        android:text="Book Now"
        android:layout_below="@+id/hrs"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/booknow"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="@color/OrangeRed"
        android:text="Call Now"
        android:layout_below="@+id/hrs"
        android:textColor="@color/White" />

</LinearLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />
</RelativeLayout>